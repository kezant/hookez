{
  "name": "hookez",
  "version": "1.0.0",
  "description": "Useful React hooks!",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "test:ci": "jest --ci --reporters='default' --reporters='./github-actions-reporter' --config jestconfigf.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/keznet/hookez.git"
  },
  "keywords": [
    "React",
    "Hooks"
  ],
  "author": "keznet",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/keznet/hookez/issues"
  },
  "homepage": "https://github.com/keznet/hookez#readme",
  "devDependencies": {
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.25",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-test-renderer": "^18.2.0",
    "ts-jest": "^29.0.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.9.3"
  },
  "files": [
    "dist/**/*"
  ]
}
